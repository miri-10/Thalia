generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  role      String   @default("farmer") // farmer, expert, admin
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  farmProfile FarmProfile?
  expenses    Expense[]
  yields      Yield[]
  alerts      Alert[]
  sentMessages     Chat[] @relation("SentMessages")
  receivedMessages Chat[] @relation("ReceivedMessages")
}

model FarmProfile {
  id        String   @id @default(cuid())
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id])
  districtId String
  district  District @relation(fields: [districtId], references: [id])
  size      Float?   // in hectares or kattha
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  crops     FarmCrop[]
}

model District {
  id        String   @id @default(cuid())
  name      String   @unique
  region    String
  
  weather   Weather?
  marketPrices MarketPrice[]
  farmProfiles FarmProfile[]
  suitableCrops Crop[]
}

model Crop {
  id          String   @id @default(cuid())
  name        String
  description String?
  scientificName String?
  season      String? 
  
  districts   District[]
  marketPrices MarketPrice[]
  farmCrops   FarmCrop[]
  yields      Yield[]
}

model FarmCrop {
  id        String   @id @default(cuid())
  farmId    String
  farm      FarmProfile @relation(fields: [farmId], references: [id])
  cropId    String
  crop      Crop     @relation(fields: [cropId], references: [id])
  plantedAt DateTime?
  status    String   @default("growing") // growing, harvested
}

model MarketPrice {
  id         String   @id @default(cuid())
  cropId     String
  crop       Crop     @relation(fields: [cropId], references: [id])
  districtId String
  district   District @relation(fields: [districtId], references: [id])
  price      Float
  unit       String   @default("kg")
  date       DateTime @default(now())
}

model Weather {
  id         String   @id @default(cuid())
  districtId String   @unique
  district   District @relation(fields: [districtId], references: [id])
  temp       Float
  humidity   Float
  rainfall   Float
  conditions String
  forecast   String   // JSON string or simple text
  updatedAt  DateTime @updatedAt
}

model Expense {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  category  String   // seeds, fertilizer, labor, etc.
  amount    Float
  date      DateTime @default(now())
  notes     String?
}

model Yield {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  cropId    String
  crop      Crop     @relation(fields: [cropId], references: [id])
  amount    Float    // quantity harvested
  unit      String   @default("kg")
  date      DateTime @default(now())
  revenue   Float?
}

model Alert {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  type      String   // weather, market, pest
  message   String
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
}

model Chat {
  id        String   @id @default(cuid())
  senderId  String
  sender    User     @relation("SentMessages", fields: [senderId], references: [id])
  receiverId String
  receiver  User     @relation("ReceivedMessages", fields: [receiverId], references: [id])
  message   String
  createdAt DateTime @default(now())
}
